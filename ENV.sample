# Thermal Eye Environment Configuration Sample
# Copy this file to .env and update with your actual values

# Authentication Configuration
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=480
FRONTEND_URL=http://localhost:3000

# Database Configuration
# For development, use SQLite (default)
DATABASE_URL=sqlite:///./thermal_eye.db
# For production, use PostgreSQL
# DATABASE_URL=postgresql://thermal_user:thermal_pass@localhost:5432/thermaleye

# API Keys
WEATHER_API_KEY=your_openweathermap_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Error Tracking & Monitoring
SENTRY_DSN=your_sentry_dsn_here_optional
ENVIRONMENT=development

# OCR Configuration (optional)
OCR_REGION=top_left
OCR_TOP_FRACTION=0.4
OCR_SIDE_FRACTION=0.5
OCR_CONFIDENCE_THRESHOLD=0.4
# Enhanced preprocessing (disabled by default for stability)
OCR_USE_ENHANCED_PREPROCESSING=false
OCR_SCALE_FACTOR=1.5
OCR_SHARPNESS_FACTOR=1.2
OCR_USE_MORPHOLOGY=false
OCR_USE_ADAPTIVE_THRESHOLD=false

# Email Alert Recipient
ALERT_EMAIL_RECIPIENT=engineer@company.com

# OpenRouter Model Configuration
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct
OPENROUTER_URL=https://openrouter.ai/api/v1/chat/completions

# Production Configuration
ENVIRONMENT=development

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
